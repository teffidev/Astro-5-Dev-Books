---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-primary: system-ui, sans-serif;
		--color-primary: #fff;
		--color-secondary: #000;
		--color-gradient-start: #ff3e00;
		--color-gradient-stop: #ff003e;
	}
	html {
		font-family: var(--font-primary);
		background: var(--color-secondary);
		color: var(--color-primary);
	}
	body {
		@apply grid place-items-center p-20;
	}
	body > div {
		@apply container;
	}
</style>
